<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center">Create a New CampGround</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds" method="POST">
                    
                    <div class="form-group">
                        <label for="name">Campground Name</label>
                        <input class="form-control" name="name" type="text" placeholder="Name">
                    </div>
                    
                    <div class="form-group">
                        <label for="image">Image URL</label>
                        <input class="form-control" name="image" type="text" placeholder="Image URL">
                    </div>                    
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input class="form-control" name="price" type="number" placeholder="Price" min="0.01" step="0.01">
                    </div>
                    
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input class="form-control" name="description" type="textarea" placeholder="Description">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Back</a>
            </div>
    </div>


<% include ../partials/footer %>
